#!/usr/bin/env python

import re
import sys
import textwrap
from email.parser import Parser

def just_names(email):
    email = re.sub(r'\s+', ' ', email)
    email = re.sub(r'<[^>]+>', '', email)
    email = email.strip()
    return email

def others(number):
    if number < 1:
        return ''
    if number == 1:
        plural = ''
    else:
        plural = 's'
    return ', and {0} other{1}.'.format(number, plural)

def make_shorter(s):
    if '\n' not in s or len(s) < 140:
        return s
    s = s.replace('\n', '')
    emails = s.split(',')
    p = map(just_names, emails)
    excess = []
    while len(', '.join(p)) > 125:
        excess.append(p.pop())
    p = textwrap.fill(', '.join(p) + others(len(excess)))
    return p

p = Parser()
msg = p.parse(sys.stdin, headersonly=True)

msg.replace_header('To', make_shorter(msg['To']))
for cc in ('CC', 'Cc', 'cc'):
    if msg[cc]:
        msg.replace_header(cc, make_shorter(msg[cc]))
        break

print msg.as_string()
