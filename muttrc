# A basic .muttrc for use with Gmail
# Change the following six lines to match your Gmail account details
source ~/.muttauth
# Change the following line to a different editor you prefer.
set editor = "emacsclient"
set mailcap_path="~/.mailcap"   # Location of the mailcap file.  It contains instructions for viewing attachments.
# Basic config, you can leave this as is
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set imap_check_subscribed
set hostname = gmail.com
set mail_check = 120
set timeout = 300
set imap_keepalive = 300
set postponed = "+[Gmail]/Drafts"
set record = "+[Gmail]/Sent Mail"
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates
set move = no
set include
set sort = 'threads'
set auto_tag = yes
hdr_order Date From To Cc
auto_view text/html
bind editor <Tab> complete-query
bind editor ^T complete
bind editor <space> noop
# Gmail-style keyboard shortcuts
macro index,pager y "<enter-command>unset trash\n <delete-message>" "Gmail archive message"
macro index,pager d "<enter-command>set trash=\"imaps://imap.googlemail.com/[Gmail]/Bin\"\n <delete-message>" "Gmail delete message"
macro index gl "<change-folder>"
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index gs "<change-folder>=[Gmail]/Starred<enter>" "Go to starred messages"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro index gt "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to sent mail"

set index_format = "%4C %Z %{%b %d} %-20.20F %s"
color header 	yellow	   black  "^List-"
color header 	yellow	   black  "^Errors-"

#color tree	red	black #Thread arrows.
color tree	green	black #thread arrows under os x terminal
color indicator black	cyan 	#indicator?
color status	brightgreen	black 	#status line
color hdrdefault	cyan	black	#default header color
color attachment	brightyellow	black 	#MIME attachments

color index	green          black  ~l      # Mailing list
color index     magenta        black  ~F      # Flagged
color index     cyan           black  ~T      # Tagged
color index     red            black  ~D      # Deleted
color index     yellow         black  ~N      # New
color index     yellow         black  ~O      # Old





#  Coloring quoted text - coloring the first 7 levels:
color quoted    green      black
color quoted1   yellow    black
color quoted2   red       black
color quoted3   cyan     black
color quoted4   green      black
color quoted5   yellow    black
color quoted6   red       black
color quoted7   cyan     black

#URLs in message bodies
color body      magenta     black  "\\b[^ ]+://[^ \(\>)]*"

source ~/.mail-aliases
set alias_file=~/.mail-aliases

set mailcap_path="~/.mailcap"   # Location of the mailcap file.  It contains instructions for viewing attachments.
alternative_order text/plain text/html  #Prefer plain text to html when possible.