[general]
ui = ttyui
accounts = chn,simulacrum,sdf
pythonfile = ~/.offlineimap.py
fsync = False
socktimeout = 30

[Account chn]
localrepository = chn-Local
remoterepository = chn-Remote
status_backend = sqlite

[Account simulacrum]
localrepository = simulacrum-Local
remoterepository = simulacrum-Remote
status_backend = sqlite

[Account sdf]
localrepository = sdf-local
remoterepository = sdf-remote
status_backend = sqlite

[Repository chn-Local]
type = Maildir
localfolders = ~/Mail/chn
nametrans = lambda folder: {'drafts'    : '[Gmail]/Drafts',
                            'sent_mail' : '[Gmail]/Sent Mail',
                            'starred'   : '[Gmail]/Starred',
                            'archive'   : '[Gmail]/All Mail',
                            }.get(folder, folder).replace('_', ' ')

[Repository simulacrum-Local]
type = Maildir
localfolders = ~/Mail/simulacrum
nametrans = lambda folder: {'drafts'    : '[Gmail]/Drafts',
                            'sent_mail' : '[Gmail]/Sent Mail',
                            'starred'   : '[Gmail]/Starred',
                            'archive'   : '[Gmail]/All Mail',
                            }.get(folder, folder).replace('_', ' ')


[Repository sdf-local]
type = Maildir
localfolders = ~/Mail/sdf

[Repository chn-Remote]
type = Gmail
remoteuser = chn@nullsurface.com
remotepasseval = get_password('chnemail')
realdelete = no
cert_fingerprint = 6d1b5b5ee0180ab493b71d3b94534b5ab937d042

# "[Gmail]/Some Folder" --> some_folder
nametrans = lambda folder: {'[Gmail]/Drafts'    : 'drafts',
                            '[Gmail]/Sent Mail' : 'sent_mail',
                            '[Gmail]/Starred'   : 'starred',
                            '[Gmail]/All Mail'  : 'archive',
                            }.get(folder, folder).replace(' ', '_')
folderfilter = lambda folder: folder not in ['[Gmail]/Trash',
                                             '[Gmail]/Important',
                                             '[Gmail]/Spam',
                                             ]

[Repository simulacrum-Remote]
type = Gmail
remoteuser = simulacrum@chigby.org
remotepasseval = get_password('simulacrum')
realdelete = no
cert_fingerprint = 6d1b5b5ee0180ab493b71d3b94534b5ab937d042

# "[Gmail]/Some Folder" --> some_folder
nametrans = lambda folder: {'[Gmail]/Drafts'    : 'drafts',
                            '[Gmail]/Sent Mail' : 'sent_mail',
                            '[Gmail]/Starred'   : 'starred',
                            '[Gmail]/All Mail'  : 'archive',
                            }.get(folder, folder).replace(' ', '_')
folderfilter = lambda folder: folder not in ['[Gmail]/Trash',
                                             '[Gmail]/Important',
                                             '[Gmail]/Spam',
                                             ]

[Repository sdf-remote]
type = IMAP
remotehost = mail.freeshell.org
remoteuser = chigby
remotepasseval = get_password('SDF')
folderfilter = lambda foldername: foldername in ['INBOX', 'INBOX.Trash', 'INBOX.Drafts', 'INBOX.Sent']
ssl = no
reference = INBOX